<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <h1><strong><%= "#{@employee.first_name} #{@employee.last_name}" %></strong></h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <h3><strong>Company</strong></h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-5">
    <% company = @employee.company %>
    <%= company.name %>
    <%= link_to 'Show', company %>
    <%= link_to 'Edit', edit_company_path(company) %>
    <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <h3><strong>Location</strong></h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-5">
    <% location = @employee.location %>
    <%= location.name %>
    <%= link_to 'Show', location %>
    <%= link_to 'Edit', edit_location_path(location) %>
    <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <h3><strong>Courses Enrolled in</strong></h3>
  </div>
</div>
<% @employee.courses.each do |course| %>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-11">
      <%= course.title %>
      <%= link_to 'Show', course %>
      <%= link_to 'Edit', edit_course_path(course) %>
      <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>


<%= link_to 'Edit', edit_location_path(@employee) %> |
